generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  temporaryPasswordHash   String?
  temporaryPasswordExpiresAt DateTime?
  mustResetPassword       Boolean               @default(false)
  firstName String
  lastName  String
  birthDate DateTime
  phone     String
  cartItems CartItem[]
  rewardPoints         Int                   @default(0)
  lifetimeRewardPoints Int                   @default(0)
  giftCardBalance      Decimal               @default(0) @db.Decimal(10, 2)
  freeCoffeeCredits    Int                   @default(0)
  rewardTransactions   RewardTransaction[]
  giftCardTransactions GiftCardTransaction[]
}

model MenuItem {
  id          Int           @id @default(autoincrement())
  name        String
  description String
  price       Decimal       @db.Decimal(10, 2)
  category    MenuCategory
  imageKey    String
  tags        String[]      @default([])
  isAvailable Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  cartItems   CartItem[]
}

model CartItem {
  id         Int       @id @default(autoincrement())
  userId     Int
  menuItemId Int
  quantity   Int       @default(1)
  notes      String?
  milkOption MilkOption @default(WHOLE)
  espressoShots Int     @default(2)
  flavorName  String?
  flavorPumps Int?
  customizationKey String @default("default")
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  menuItem MenuItem @relation(fields: [menuItemId], references: [id])

  @@unique([userId, menuItemId, customizationKey])
}

enum MenuCategory {
  COFFEE
  PASTRY
}

enum MilkOption {
  WHOLE
  HALF_AND_HALF
  ALMOND
  OAT
  SOY
}

model RewardTransaction {
  id        Int                    @id @default(autoincrement())
  userId    Int
  points    Int
  reason    String
  type      RewardTransactionType
  createdAt DateTime               @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model GiftCardTransaction {
  id        Int                    @id @default(autoincrement())
  userId    Int
  amount    Decimal                @db.Decimal(10, 2)
  type      GiftCardTransactionType
  note      String?
  createdAt DateTime               @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum RewardTransactionType {
  EARN
  REDEEM
  ADJUSTMENT
}

enum GiftCardTransactionType {
  REFILL
  PURCHASE
  ADJUSTMENT
}
